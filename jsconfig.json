{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./src",
    "paths": {
      "~api/*": ["api/*"],
      "~assets/*": ["assets/*"],
      "~components/*": ["components/*"],
      "~containers/*": ["containers/*"],
      "~styles/*": ["styles/*"],
      "~utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
